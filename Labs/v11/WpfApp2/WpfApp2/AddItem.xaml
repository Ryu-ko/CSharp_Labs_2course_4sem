<Window
    x:Class="WpfApp2.AddItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AddItem"
    Width="300"
    Height="250"
    mc:Ignorable="d" Background="#FFFCB93C">
    <Grid>
        <StackPanel Margin="10,0,10,0" Orientation="Vertical">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="20"
                Text="Add New Discipine" />
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Name" />
                <TextBox x:Name="txtBlck1" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Hours" />
                <TextBox x:Name="txtBlck2" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Lector" />
                <TextBox x:Name="txtBlck3" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Quantity" />
                <TextBox x:Name="txtBlck4" />
            </StackPanel>
            <Button Click="AddNewItem" Content="Add Discipline" />
        </StackPanel>
    </Grid>
</Window>
